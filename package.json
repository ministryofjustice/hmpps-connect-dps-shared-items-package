{
  "name": "@ministryofjustice/hmpps-connect-dps-shared-items",
  "version": "1.2.1",
  "description": "A package to share connect dps functionality across applications",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "tsc && npm run copy:assets",
    "test": "jest --passWithNoTests",
    "test:ci": "jest --runInBand --passWithNoTests",
    "typecheck": "tsc",
    "lint": "eslint . --cache --max-warnings 0",
    "copy:assets": "rm -rf dist/assets && cp -r src/assets dist/assets",
    "security_audit": "npx audit-ci --config audit-ci.json",
    "prepare": "hmpps-precommit-hooks-prepare",
    "precommit:secrets": "gitleaks git --pre-commit --redact --staged --verbose --config .gitleaks/config.toml",
    "precommit:lint": "node_modules/.bin/lint-staged",
    "precommit:verify": "npm run typecheck && npm test"
  },
  "lint-staged": {
    "*.{ts,css}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "isolatedModules": true
        }
      ]
    },
    "testMatch": [
      "<rootDir>/**/**/?(*.)(cy|test).{ts,js,jsx,mjs}"
    ],
    "testEnvironment": "node",
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "test_results/jest/"
        }
      ],
      [
        "./node_modules/jest-html-reporter",
        {
          "outputPath": "test_results/unit-test-reports.html"
        }
      ]
    ],
    "moduleFileExtensions": [
      "web.js",
      "js",
      "json",
      "node",
      "ts"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/ministryofjustice/hmpps-connect-dps-shared-items-package.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ministryofjustice/hmpps-connect-dps-shared-items-package/issues"
  },
  "homepage": "https://github.com/ministryofjustice/hmpps-connect-dps-shared-items-package#readme",
  "devDependencies": {
    "@ministryofjustice/eslint-config-hmpps": "^0.0.1",
    "@ministryofjustice/hmpps-precommit-hooks": "^0.0.3",
    "@tsconfig/node22": "^22.0.2",
    "@types/jest": "^29.5.14",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-no-only-tests": "^3.3.0",
    "jest": "^29.7.0",
    "jest-html-reporter": "^3.10.2",
    "jest-junit": "^16.0.0",
    "ts-jest": "^29.3.4"
  }
}
